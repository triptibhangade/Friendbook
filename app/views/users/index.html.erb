<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if !(current_user?(user) || @received.include?(user)) %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        user_path(user), :class => 'btn btn-default btn-xs' %>
            <% if @friends.include?(user)%>
              <%= link_to "Unfriend", friendship_path(user),
                        :method => :delete, :class => "btn btn-xs btn-danger" %>    
            <% elsif @sent.include?(user) %>
              <%= link_to "Cancel Request", friendship_path(user),
                      :method => :delete, :class => "btn btn-xs btn-danger" %>              
            <% else %>
              <%= link_to "Add Friend", create_friendship_path(user),
                        :method => :post, :class => 'btn btn-primary btn-xs' %>
            <% end %>
           </td>
        </tr>
      <% end %> 
    <% end %>
  </tbody>
</table>